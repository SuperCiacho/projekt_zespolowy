~/Service/Register
{
	anonymous_allowed
	in
	{
		string login
		string password
	}
	out
	{
		int registered {0-false 1-true}
		int user_id
	}
}

~/Service/Login
{
	anonymous_allowed
	in
	{
		string login
		string password
	}
	out
	{
		int logged_in {0-false 1-true}
		int user_id
	}
}

~/Service/Logout
{
	in {}
	out {}
}

~/Service/GetContactList
{
	in {}
	out list of
	{
		int user_id
		string login
		string nickname
		int status
		string description
	}
}

~/Service/GetStatusUpdate async
{
	in {}
	out list of
	{
		int user_id
		int status {0-online 1-offline 2-away}
		string description
	}
}

~/Service/SetStatus
{
	in
	{
		int status
		string description
	}
	out {}
}

~/Service/SendMessage
{
	in
	{
		list of int users {including author of message}
		string message
	}
	out
	{
		long timestamp
	}
}

~/Service/GetMessage async
{
	in {}
	out list of
	{
		list of int users
		int author
		long timestamp
		string message
	}
}

~/Service/GetUserData
{
	in
	{
		int user_id
	}
	out
	{
		int user_id
		string login
		int status
		string description
	}
}

~/Service/GetUserData
{
	in
	{
		string login
	}
	out
	{
		int user_id
		string login
		int status
		string description
	}
}