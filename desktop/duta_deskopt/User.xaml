<Window x:Class="duta_deskopt.User"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Duta - logowanie" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="login" Text="d_wiazowski" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="23" Margin="89,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Grid.ColumnSpan="2" Content="Login" HorizontalAlignment="Left" Margin="89,32,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Grid.ColumnSpan="2" Content="Hasło" HorizontalAlignment="Left" Margin="89,110,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Grid.ColumnSpan="2" Click="login_Click" Content="Zaloguj" HorizontalAlignment="Left" Margin="89,207,0,0" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="password" Password="d_wiazowski" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="89,141,0,0" VerticalAlignment="Top" Width="120" Height="24"/>

    </Grid>
</Window>
